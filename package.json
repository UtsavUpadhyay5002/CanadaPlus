{
  "name": "canada-plus-news",
  "version": "1.0.0",
  "description": "Canada+ TikTok-style news PWA",
  "type": "module",
  "scripts": {
    "dev:marketing": "vite serve apps/marketing --port 3000",
    "dev:pwa": "vite serve apps/pwa --port 3001",
    "build:marketing": "vite build apps/marketing --outDir ../../dist/marketing",
    "build:pwa": "vite build apps/pwa --outDir ../../dist/pwa",
    "build": "npm run build:marketing && npm run build:pwa",
    "preview": "vite preview --port 4173",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "firebase": "^10.7.1",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.263.1",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.0.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "workbox-build": "^7.0.0"
  }
}